# Cache static assets via mod_expires
<IfModule mod_expires.c>
  ExpiresActive On

  # Images - 1 year
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS & JS - 1 month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"

  # Fonts - 1 year
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"

  # PDF - 1 month
  ExpiresByType application/pdf "access plus 1 month"

  # HTML - 1 hour
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Cache static assets via mod_headers
<IfModule mod_headers.c>
  # Images - 1 year (31536000 seconds)
  <FilesMatch "\.(webp|jpg|jpeg|png|gif|svg|ico)$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # CSS & JS - 1 month (2592000 seconds)
  <FilesMatch "\.(css|js)$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # Fonts - 1 year
  <FilesMatch "\.(woff|woff2|ttf|eot)$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # PDF - 1 month
  <FilesMatch "\.pdf$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # MP3 - 1 month
  <FilesMatch "\.mp3$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # HTML - 1 hour (3600 seconds)
  <FilesMatch "\.html$">
    Header unset Cache-Control
    Header always set Cache-Control "public, max-age=3600"
  </FilesMatch>
</IfModule>

# Compress text-based files
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>
